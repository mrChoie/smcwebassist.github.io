				<li class="nav-item ps-3">
				<!-- Feedback Button -->
				<a class="nav-link" aria-current="page" href="/smc-webassist/feedback">Feedback</a>
				</li>
				<li class="nav-item ps-3">
				<!-- About Button -->
				<a class="nav-link" aria-current="page" href="/smc-webassist/about">About</a>
				</li>
			</ul>
			<form class="d-flex">
				<div style="display: flex;" id="loggedInDiv">
					<a class="btn border-0 ps-3" href="/smc-webassist/account">Profile</a>
				</div>
				
				<div style="display: flex;" id="loggedOutDiv">
					<a class="btn border-0 ps-3" href="/smc-webassist/signin">Sign in</a>
				</div>
			</form>
		</div>
		</div>
	</nav>
	
	
	<div class="container-fluid pb-5" id="ticketBodyContent1">
		<div class="container mt-3 pb-5">
			<h3 class="mt-5" id="categoryTitle">CATEGORY TITLE</h3>
			<form class="needs-validation" novalidate style="font-size: 16px;">
				<div class="row mt-3">
					<div class="col-8">
						<label for="ticketStudName" id="ticketLabel">Student Name</label>
						<input type="text" class="form-control rounded-0 rounded-bottom" disabled id="ticketStudName2" placeholder="Last Name, First Name" name="tktOwner" required>
					</div>
					<div class="col-4">
						<label for="ticketIdNum" id="ticketLabel">ID Number</label>
						<input type="text" class="form-control rounded-0 rounded-bottom" disabled id="ticketIdNum2" placeholder="" name="tktOwnerDBid" required>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col">
						<label for="ticketSubj" id="ticketLabel">Subject Title</label>
						<input type="text" class="form-control rounded-0 rounded-bottom" id="ticketSubj" placeholder="Title" name="tktSubj" required>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col">
						<label for="ticketDesc" id="ticketLabel">Description</label>
						<textarea class="form-control rounded-0 rounded-bottom" id="ticketDesc" rows="8" placeholder="Inquiry description..." name="tktDesc" required></textarea>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col">
						<label for="ticketFile" id="ticketLabel">Attache a File</label>
						<input type="file" class="form-control rounded-0 rounded-bottom" id="ticketFile" name="ticketFile">
					</div>
				</div>
				<i class="mt-4 ps-1 text-danger" id="ticketInvalidNotice" style="display: none; position: absolute; ">Note: Fields with ! are required.</i>
				<div class="row mt-5 text-center">
					<div class="col pt-4">
						<button class="btn btn-success ps-5 pe-5" type="submit" onclick="toggleInvalidNotice('ticket')">Submit Ticket</button>
						<button class="btn btn-outline-danger" type="reset" style="float: right;"><i class="fa-solid fa-trash"></i></button>
				</div>
				</div>
				<input type="hidden" class="form-control"id="ticketStudName" name="tktOwner">
				<input type="hidden" class="form-control"id="ticketIdNum" name="tktOwnerDBid">
				<input type="hidden" class="form-control"id="categoryID" name="categoryID">
			</form>
		</div>
	</div>

	<div class="container text-center" id="category1BodyContent2">
		
	</div>
	
	<div class="container">
		<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
